<h1 class="home-header">Connect Dots</h1>

<div class="container-home">
  <div class="row">
    <div class="col mt-5">
      <%= form_tag show_pages_path, method: :get do %>
      <form class="simple-form">
        <div class="form-group text-left">
          <h3><b><label for="exampleFormControlSelect1">I am working as: </label></b></h3>
          <select class="form-control" <%= search_field_tag :query_role, params[:query_role] %> id="industry_role">
            <option value="" disabled selected>Select your current role</option>
            <option>Marketing</option>
            <option>Design</option>
            <option>Product Management</option>
            <option>Copywriting</option>
            <option>Account Management</option>
            <option>Project Management</option>
            <option>Business Analysis</option>
            <option>Risk Management</option>
            <option>Human Resources</option>
            <option>Accounting</option>
            <option>Sales</option>
            <option>Customer Support</option>
            <option>Operations</option>
            <option>Research</option>
            <option>Instruction/Coaching</option>
            <option>Consulting</option>
            <option>Self-employed</option>
            <option>Freelance</option>
          </select>
        </div>

        <div class="form-group text-left">
          <h3><b><label for="exampleFormControlSelect1">Industry I am from: </label></b></h3>
          <select class="form-control" <%= search_field_tag :query_from, params[:query_from] %> id="industry_from">
            <option value="" disabled selected>Select your current industry</option>
            <option>Agriculture</option>
            <option>Art/Design</option>
            <option>Consulting</option>
            <option>Hospitality</option>
            <option>IT/Tech</option>
            <option>Law</option>
            <option>Leisure/Tourism</option>
            <option>Marketing/Advertising</option>
            <option>Media/Entertainment</option>
            <option>Public Services/Govt</option>
            <option>Retail</option>
            <option>Pharmaceuticals</option>
          </select>
        </div>

        <div class="form-group text-left">
          <h3><b><label for="exampleFormControlSelect1">Switching to: </label></b></h3>
          <select class="form-control" <%= search_field_tag :query_to, params[:query_to] %> id="industry_to">
            <option value="" disabled selected>Select ideal role</option>
            <option>Still Exploring</option>
            <option>Web Developer</option>
            <option>Product Manager</option>
            <option>Fullstack Engineer</option>
            <option>Frontend Developer</option>
            <option>Backend Developer</option>
            <option>Data Analyst</option>
            <option>Android Developer</option>
            <option>IOS Developer</option>
            <option>Hardware Engineer</option>
            <option>Cloud Engineer</option>
            <option>DevOps Engineer</option>
          </select>
        </div>

        <%= submit_tag "Search", class: "btn home-btn" %>
      </form>
      <% end %>
    </div>

    <div class="col ml-5 mt-3">
      <div class="slideshow-container mt-3">
        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
          <div class="numbertext">1 / 3</div>
          <img src="https://arthur-littm.github.io/startup-landing/images/apply.svg" style="width:300px; height:400px">
          <div class="text">Feeling uncertain? <br>Connect with other career switchers or mentors, share your concern and get advice.</div>
        </div>

        <div class="mySlides fade">
          <div class="numbertext">2 / 3</div>
          <img src="https://arthur-littm.github.io/startup-landing/images/learn.svg" style="width:300px; height:400px">
          <div class="text">Not sure where to start? Check out how your network reached their goal and explore the right path baesd on your profile.</div>
        </div>

        <div class="mySlides fade">
          <div class="numbertext">3 / 3</div>
          <img src="https://arthur-littm.github.io/startup-landing/images/product.svg" style="width:300px; height:400px">
          <div class="text">Trouble planning your goals? Select the best roadmap template from your network and personalize it to your lifestyle and budget.</div>
        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
      </div>
      <br>

      <!-- The dots/circles -->
      <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
      </div>
    </div>
  </div>
</div>

<script>
  var slideIndex = 1;
  showSlides(slideIndex);

  function plusSlides(n) {
    showSlides(slideIndex += n);
  }

  function currentSlide(n) {
    showSlides(slideIndex = n);
  }

  function showSlides(n) {
    var i;
    var slides = document.getElementsByClassName("mySlides");
    var dots = document.getElementsByClassName("dot");
    if (n > slides.length) {
      slideIndex = 1
    }
    if (n < 1) {
      slideIndex = slides.length
    }
    for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
    }
    for (i = 0; i < dots.length; i++) {
      dots[i].className = dots[i].className.replace(" active", "");
    }
    slides[slideIndex - 1].style.display = "block";
    dots[slideIndex - 1].className += " active";
  }
</script>