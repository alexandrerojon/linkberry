<p style="margin-left: 320px; font-size: 18px;">My current role: <%= @user.current_role %></p>
<h2 style="margin-left: 320px"><strong>Here's where you can start!</strong></h2>
<br>

<div class="dropdown-menu">
  <% @courses.each do |course| %>
  <a class="dropdown-item" href="<%= course.provider_url %>" target="_blank"><span class="rd1-li2"><%= course.provider %></span> <span class="rd1-li3"><%= course.title %></span></a>
  <div class="dropdown-divider"></div>
  <% end %>
</div>

<div class="bd-container">
  <div class="bd-row">
    <div class="tab">
      <table>
        <tr class="months">
          <% @month_array = (@roadmap.start_date..@roadmap.end_date).map(&:beginning_of_month).uniq.map(&:month) %>
          <% @month_array.each do |m| %>
            <th><%= Date::MONTHNAMES[m] %></th>
          <% end %>
        </tr>
        <tr>
        <% (1..@course_roadmaps.count).each do |road| %>
          <% @month_array.each do |m| %>
          <% end %>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
